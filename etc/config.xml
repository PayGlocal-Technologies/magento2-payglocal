<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <payglocal>
                <active>0</active>
                <title>PayGlocal</title>
                <mode>0</mode>
                <sandbox_gateway_url>https://api.dev.payglocal.in/gl/v1/payments/initiate/paycollect</sandbox_gateway_url>
                <live_gateway_url>https://api.payglocal.in/gl/v1/payments/initiate/paycollect</live_gateway_url>
                <order_status>pending</order_status>
                <model>Meetanshi\PayGlocal\Model\Payment</model>
                <show_logo>1</show_logo>
                <allow_invoice>0</allow_invoice>
                <debug>0</debug>
                <instructions>You will be redirected to PayGlocal Payment Gateway.</instructions>
            </payglocal>
        </payment>
    </default>
</config>
